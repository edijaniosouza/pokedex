<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.edijanio.pokedex" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_pokedex_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_pokedex_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.Pokedex" >
        <activity
            android:name=".activities.PokemonFavoriteListActivity"
            android:exported="true"
            android:label="@string/title_activity_pokemon_favorite_list"
            android:theme="@style/Theme.Pokedex.NoActionBar" />
        <activity android:name=".activities.PokemonDetailsActivity" />
        <activity android:name=".activities.PokemonListActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>